@model Order

@{
    ViewData["Title"] = "Read More";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    Order Details
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">Order Id: @Model.Id</h5>
                    <p class="card-text text-center">Name: @Model.Name</p>
                    <!-- Add additional order information here -->

                    <hr> <!-- Divider -->

                    <div class="mt-3 text-center">
                        <form method="post" asp-action="CreateOrderPdf" asp-controller="Pdf" class="mb-2">
                            <input type="hidden" name="orderId" value="@Model.Id" />
                            <button type="submit" class="btn btn-primary">View Or Print Order</button>
                        </form>

                        @if (Model.Delivery == true)
                        {
                            <form method="post" asp-action="CreateInvoicePdf" asp-controller="Pdf" class="mb-2">
                                <input type="hidden" name="orderId" value="@Model.Id" />
                                <button type="submit" class="btn btn-primary">Print Invoice</button>
                            </form>

                            <form method="post" asp-action="CreateShippingLabelPdf" asp-controller="Pdf" class="mb-2">
                                <input type="hidden" name="orderId" value="@Model.Id" />
                                <button type="submit" class="btn btn-primary">Print Shipping Label</button>
                            </form>
                        }

                        <form asp-controller="Orders" asp-action="Orders" method="get">
                            <button type="submit" class="btn btn-secondary">Back to Orders</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
