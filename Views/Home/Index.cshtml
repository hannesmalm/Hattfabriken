<a id="openOutlook" href="" onclick="openOutlook()">Open Outlook</a>

<script>
    function openOutlook() {
        var emailBody = "Dear Customer,\n\nWe regret to inform you that your request has been denied. Unfortunately, we are unable to create the hat you have requested at this time.\n\nBest regards,\nThe Hat Factory Team";
        var encodedEmailBody = encodeURIComponent(emailBody);
        var mailtoLink = "mailto:?subject=Request%20Denied&body=" + encodedEmailBody;
        document.getElementById("openOutlook").setAttribute("href", mailtoLink);
    }
</script> 


