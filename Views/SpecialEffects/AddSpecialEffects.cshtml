@model Hattfabriken.Models.ViewModels.SpecialEffectsViewModel


<h2>Add New Special Effect</h2>
<form asp-action="CreateSpecial" method="post">
    <div class="form-group">
        <label asp-for="SpecialEffectName"></label>
        <input asp-for="SpecialEffectName" class="form-control" />
        <span asp-validation-for="SpecialEffectName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Special Effect</button>
</form>
