@{
}


@model IEnumerable<Material>

@{
    ViewData["Title"] = "Storage of Materials";
}

<h1>Storage of Materials</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model)
        {
            <tr>
                <td>@material.MaterialName</td>
                <td>@material.MaterialQuantity</td>
                <td>
                    <a asp-action="EditMaterial" asp-route-id="@material.MaterialId" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Add New Material</h2>
<form asp-action="AddMaterial" method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="Quantity" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add Material</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
