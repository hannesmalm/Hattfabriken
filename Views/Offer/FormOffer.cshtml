@model Hattfabriken.Models.Viewmodels.OfferViewModel


<h1>Create Offer</h1>

<form asp-controller="Offer" asp-action="Create" method="post" enctype="multipart/form-data>

   <div class="form-group">
        <label asp-for="KundNamn">Costumer name:</label>
        <input asp-for="KundNamn" class="form-control"/>
   </div>

   <div class="form-group">
        <label asp-for="KundMail">Costumer mail:</label>
        <input asp-for="KundMail" class="form-control" />
   </div>

    <div class="form-group">
        <label asp-for="KundTel">Costumer phone number:</label>
        <input asp-for="KundTel" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MaterialKostnad">Material cost:</label>
        <input asp-for="MaterialKostnad" class="form-control" />
        
    </div>

    <div class="form-group">
        <label asp-for="SpecialeffektKostnad">Special effect fabric cost:</label>
        <input asp-for="SpecialeffektKostnad" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SpecialtygKostnad">Special fabric cost:</label>
        <input asp-for="SpecialtygKostnad" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FraktKostnad">Shipping cost:</label>
        <input asp-for="FraktKostnad" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EstimeratLeveransdatum">Estimated delivery date:</label>
        <input asp-for="EstimeratLeveransdatum" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary" onclick="openOutlook()" >Send In</button>

</form>

<script>

                                    // Hur hämtar vi från formuläret?
    function openOutlook() {
        var subject = "Offer for request ...";
        var emailAdress = "KundMail"; 
        var body = "Dear Customer,\n\n  Here is an offer bla bla bla.  \n\nBest regards,\nThe Hat Factory Team";
        var mailtoLink = "mailto:" + encodeURIComponent(emailAdress) + "?subject=" + encodeURIComponent(subject) + "&body=" + encodeURIComponent(body);
        window.location.href = mailtoLink;
    }
</script>