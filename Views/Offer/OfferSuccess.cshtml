
@{
    var offer = ViewBag.Offer;
}

<h1>Offer created!</h1>
<a asp-controller="Home" asp-action="Index">Gå tillbaka till startsidan</a>

<script>
    window.onload = function () {
        var subject = "Offer from The Hat Factory";
        var emailAdress = "@offer.Email";
        var name = "@offer.Name";
        var materialCost = "@offer.MaterialCost";
        var specialEffectCost = "@offer.SpecialEffectCost";
        var shippingCost = "@offer.ShippingCost";
        var totalCost = "@offer.TotalCost";
        var hatmakerComment = "@offer.HatmakerComment";
        var estimatedDeliveryDate = "@offer.EstimatedDeliveryDate";

        // Skapa meddelandetexten med all information
        var body = "Dear " + name + ",\n\n";
        body += "Thank you for your request. Here is the offer for your customized hat:\n\n";
        body += "Material Cost: $" + materialCost + "\n";
        body += "Special Effect Cost: $" + specialEffectCost + "\n";
        body += "Shipping Cost: $" + shippingCost + "\n";
        body += "Total Cost: $" + totalCost + "\n\n";
        body += "Hatmaker's Comment: " + hatmakerComment + "\n\n";
        body += "Estimated Delivery Date: " + estimatedDeliveryDate + "\n\n";
        body += "Please let us know if you have any questions or if you would like to proceed with this offer.\n\n";
        body += "Best regards,\nThe Hat Factory Team";

        // Skapa länken för att skicka e-post
        var mailtoLink = "mailto:" + encodeURIComponent(emailAdress) + "?subject=" + encodeURIComponent(subject) + "&body=" + encodeURIComponent(body);

        // Öppna e-postklienten med den förifyllda e-posten
        window.location.href = mailtoLink;
    }
</script>
