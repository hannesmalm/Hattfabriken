@model List<Hattfabriken.Models.Offer>

<p>Här är alla offers brush</p>

<style>
    #offerTable tbody tr:hover {
        background-color: lightgray;
        cursor: pointer;
    }
</style>

<table class="table" id="offerTable">
    <thead>
        <tr>
            <th>Date Created</th>
            <th>Offer ID</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Customer Phone</th>
            <th>Total Cost</th>
            <th>Estimated Delivery Date</th>
            <th>Se Konversation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var offer in Model)
        {
            <tr data-href="@Url.Action("OfferDetails", "Offer", new { offerId = offer.OffertId })">
                <td>
                    <p>@offer.SkapadDatum.ToString("yyyy-MM-dd")</p>
                </td>
                <td>
                    <p>@offer.OffertId</p>
                </td>
                <td>
                    <p>@offer.KundNamn</p>
                </td>
                <td>
                    <p>@offer.KundMail</p>
                </td>
                <td>
                    <p>@offer.KundTel</p>
                </td>
                <td>
                    <p>@offer.TotalKostnad</p>
                </td>
                <td>
                    <p>@offer.EstimeratLeveransdatum.ToString("yyyy-MM-dd")</p>
                </td>
                <td>
                    <!-- Knapp för att visa konversation (öppna mail) -->
                    <button class="btn btn-primary" onclick="openConversation('@offer.KundMail')">Visa Konversation</button>

                    <!-- Knapp för att acceptera offert -->
                    <button class="btn btn-success" onclick="acceptOffer(@offer.OffertId)">Acceptera Offert</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var table = document.getElementById("offerTable");
        table.addEventListener("click", function (event) {
            var target = event.target;
            while (target && target !== table) {
                if (target.tagName === "TR") {
                    var href = target.getAttribute("data-href");
                    if (href) {
                        window.location.href = href;
                    }
                    return;
                }
                target = target.parentNode;
            }
        });
    });

    function openConversation(email) {
        // Skapa ett mailto-länk med sökfrågan för e-postadressen
        var mailtoLink = "mailto:?to=&subject=&body=BODY&cc=&bcc=&search=" + email;

        // Öppna mailklienten (Outlook) med den förifyllda e-postadressen
        window.location.href = mailtoLink;
    }

    function acceptOffer(offerId) {
        // Här kan du implementera logiken för att acceptera offerten med det givna offerId
        console.log("Acceptera offert med ID: " + offerId);
    }
</script>
