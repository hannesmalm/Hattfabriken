@model Hattfabriken.Models.ViewModels.RequestViewModel



@{

    ViewData["Title"] = "Skapa en ny förfrågan";

}



<form asp-action="NewRequest" asp-controller="Request" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <h1>Create a new request!</h1>

    <div class="CommentBox">

        <p>Is there anything particular you want us to take into consideration?</p>

        @Html.TextAreaFor(model => model.Commentary, new { rows = "8", cols = "50", placeholder = "Write your comment here..." })

    </div>

    <div class="form-group">
        <label asp-for="RequestImage" class="mb-0 mr-2">Ladda upp bild</label>
        <input type="file" class="form-control" asp-for="RequestImage" />
    </div>

    <div class="SpecialEffects">

        <label>

            <input type="checkbox" name="SelectedSpecialEffekter" value="Feather">

            Feather

        </label>

        <br />

        <label>

            <input type="checkbox" name="SelectedSpecialEffekter" value="Spets">

            Spets

        </label>

        <br />

        <label>

            <input type="checkbox" name="SelectedSpecialEffekter" value="Pearls">

            Pearls

        </label>

        <br />

        <label>

            <input type="checkbox" name="SelectedSpecialEffekter" value="Flower">

            Flower

        </label>

    </div>



    <div class="Material">

        <p>Witch material do you want?</p>

        <select asp-for="Material" class="form-control">

            <option value="">Choose a meterial...</option>

            <option value="Leather">Leather</option>

            <option value="Cloth">Cloth</option>

            <option value="Panama">Panama</option>

            <option value="Linen">Linen</option>

            <option value="Straw">Straw</option>

        </select>

        <span asp-validation-for="Material" class="text-danger"></span>

    </div>



    <div class="Measure">

        <p>Measurement, hight och type</p>

        <input asp-for="Measurement" placeholder="Mesuerment..." />

        <span asp-validation-for="Measurement" class="text-danger"></span>

        <br />

        <input asp-for="Height" placeholder="Hight..." />

        <span asp-validation-for="Height" class="text-danger"></span>

        <br />

        <label>Choose a hat type:</label>

        <select asp-for="HatId" class="form-control">

            <option value="">Choose a type...</option>

            <option value="1">Cowboy</option>

            <option value="2">Sheriff</option>

            <option value="3">Peaky Blinders</option>

        </select>

        <span asp-validation-for="HatId" class="text-danger"></span>

    </div>



    <div class="ContactDetails">

        <p>Contact and Delivery Details:</p>

        <label>Choose a country:</label>

        <select asp-for="Country" class="form-control">

            <option value="">Choose your contry...</option>

            <option value="Sweden">Sverige</option>

            <option value="USA">USA</option>

            <option value="UK">Storbritanien</option>

            <option value="Germany">Grekland</option>

            <option value="Norway">Norge</option>

            <option value="Finland">Finland</option>

        </select>

        <br />

        <input asp-for="Name" placeholder="Name" />

        <span asp-validation-for="Name" class="text-danger"></span>

        <br />

        <span asp-validation-for="Country" class="text-danger"></span>

        <br />

        <input asp-for="Adress" placeholder="Adress..." />

        <span asp-validation-for="Adress" class="text-danger"></span>

        <br />

        <input asp-for="PostalCode" placeholder="Postal Code..." />

        <span asp-validation-for="PostalCode" class="text-danger"></span>

        <br />

        <input asp-for="Email" placeholder="Email..." />

        <span asp-validation-for="Email" class="text-danger"></span>

        <br />

        <input asp-for="PhoneNumber" placeholder="Phonenumber..." />

        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

    </div>
    <div class="Leverans">

        <p>How do you wnat to pick up your product?</p>

        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" />

        <label class="form-check-label" for="flexRadioDefault1">

            Pick up

        </label>

        <br />

        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" />

        
        <label class="form-check-label" for="flexRadioDefault1">

            Home delivery

        </label>
    </div>



    <div class="Save">

        <button type="submit" class="btn btn-primary">Send request</button>

    </div>

</form>